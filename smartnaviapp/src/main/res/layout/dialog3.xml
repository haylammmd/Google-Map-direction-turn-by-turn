<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rLayout2gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/dialog1textgps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="16dp"
            android:text="Hãy Bật GPS để toạ độ của bạn được cập nhật chính xác hơn !!!"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rLayout2gps"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/dialogCancelgps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="125dp"
            android:text="@string/tx_35" />

        <Button
            android:id="@+id/dialogSettingsgps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dialogCancelgps"
            android:layout_toRightOf="@+id/dialogCancelgps"
            android:minWidth="125dp"
            android:text="@string/tx_36" />
    </RelativeLayout>

</RelativeLayout>